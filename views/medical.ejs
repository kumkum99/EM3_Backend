<script>
	// Add an input event listener to the search input field
document.getElementById('medicine-search-input').addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase(); // Retrieve the value entered by the user and convert it to lowercase

    // Iterate over all the medicine cards in the container
    document.querySelectorAll('#medicine-list .card').forEach(card => {
        const medicineName = card.querySelector('.card-title').textContent.toLowerCase(); // Retrieve the medicine name from the card and convert it to lowercase
        
        // Check if the medicine name contains the search term entered by the user
        if (medicineName.includes(searchTerm)) {
            card.style.display = 'block'; // Display the card if the medicine name matches the search term
        } else {
            card.style.display = 'none'; // Hide the card if the medicine name does not match the search term
        }
    });
});

